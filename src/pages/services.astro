---
import CallToAction from '~/components/widgets/CallToAction.astro';
// import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
// import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="Elevate Your Event"
    title="Transforming Events with Laser and Lighting Solutions"
    subtitle="Experience the art of illumination with our cutting-edge laser and lighting designs, tailored to make your event unforgettable."
    actions={[{ variant:"primary", target: '_blank', text: 'Explore Our Services', href: '/' }] }
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Laser and Lighting Hero Image',
    }}
  />

  <!-- Features2 Widget ************** -->
  <Features2
    title="Our Expertise"
    subtitle="Discover how our laser and lighting solutions can elevate your event."
    columns={3}
    items={[
      {
        title: 'Laser Light Shows',
        description:
          'Mesmerizing laser light shows that will leave your audience in awe.',
        icon: 'tabler:prism-light',
      },
      {
        title: 'Custom Lighting Design',
        description:
          'Tailored lighting solutions to match your events unique style and atmosphere.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Event Production Services',
        description:
          'Full-service event production, from concept to execution, ensuring a seamless experience.',
        icon: 'tabler:polaroid',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[{
      variant: "primary",
      text: 'Get a Quote',
      href: '/contact',
    }]}
    title="Bring Your Event Vision to Life"
    subtitle="Let our team of experts help you create an unforgettable experience with our custom laser and lighting solutions."
  />
</Layout>
