---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
// import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
// import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

// import hotbeamHeroVid from '~/assets/videos/HB_INTRO.mp4';

const metadata = {
  title: 'Hot Beam Productions - Colorado Laser Light Show and DJ Company',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Free Consultation',
        href: '/contact',
        icon: 'tabler:arrow-right',
      },
      { text: 'Upcoming Events', href: 'https://linktr.ee/hotbeamproductions' },
    ]}
    video={{ src: '/videos/HB_INTRO.mp4', alt: 'Hot Beam Hero video' }}
  >
    <Fragment slot="title">
      Find the perfect laser light show for your event.
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Hot Beam Productions</span> is a Colorado-based full service production company that specializes in creating unforgettable experiences for events of all sizes.
      </span>
      <!-- <span class="block mb-1 sm:hidden font-bold text-blue-600">AstroWind: Production-ready.</span>
       Suitable for Startups, Small Business, SaaS websites, Professional Portfolios, Marketing websites, Landing Pages
      & Blogs. -->
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->
  <Features
    id="features"
    title="What you get with Hot Beam Productions"
    subtitle="We provide one of the most professional and affordable production services in Colorado."
    items={[
      {
        title: 'Expert DJ Services',
        description:
          'Experienced DJs bring the perfect vibe to every event, tailored playlists, and unmatched sound quality for a memorable night.',
        icon: 'tabler:music',  // Changed icon to represent music and DJ services.
      },
      {
        title: 'Spectacular Light Shows',
        description:
          'Transform your event with state-of-the-art light shows, featuring dynamic visuals and effects that sync perfectly with the music.',
        icon: 'tabler:prism-light',  // Changed icon to represent dynamic light effects.
      },
      {
        title: 'Event Customization',
        description:
          'Personalize your event with our flexible service options, ensuring each aspect of the entertainment is just how you envision.',
        icon: 'tabler:settings',  // Changed icon to symbolize customization and settings.
      },
      {
        title: 'High-Energy Performance',
        description:
          'Our lightshow experiences are designed to energize the crowd, keeping the dance floor packed all night long.',
        icon: 'tabler:activity',  // Changed icon to depict high energy and active engagement.
      },
      {
        title: 'Professional Audio Equipment',
        description:
          'Utilize top-of-the-line audio equipment to deliver clear, crisp sound that elevates the music and entertainment experience.',
        icon: 'tabler:device-speaker',  // Changed icon to indicate professional audio equipment.
      },
      {
        title: 'Innovative Event Solutions',
        description:
          'We stay at the forefront of event technology and trends to provide innovative solutions that make your events stand out.',
        icon: 'tabler:bulb',  // Retained icon for innovation and new ideas.
      },
    ]}
  />

  <!-- Content Widget 1 -->
  <Content
    isReversed
    tagline="How we do it"
    title="Our Process For Creating Your Dream Show"
    items={[
      {
        title: 'Tailored Event Planning',
        description:
          'Each event starts with detailed planning, ensuring every aspect is customized to meet your vision for the night.',
      },
      {
        title: 'Dynamic Audio and Visual Setup',
        description:
          'We combine top-notch DJ services with spectacular laser lightshows to create an unforgettable atmosphere.',
      },
      {
        title: 'Customizable Experiences',
        description:
          'We tailor every performance to the unique needs and preferences of our clients, ensuring a personalized event experience.',
      },
    ]}
    image={{
      src: '/images/dj_lasers_centered.jpg',
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Crafting Unique Experiences</h3>
      We bring your vision to life with precise execution and creative flair, ensuring each event is a standout spectacle.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget 2 -->
  <Content
    isAfterContent
    items={[
      {
        title: 'Versatile Event Formats',
        description:
          'From intimate gatherings to large-scale productions, our setups are designed to adapt and excel in any environment.',
      },
      {
        title: 'State-of-the-Art Technology',
        description:
          'We use the latest in sound and lighting technology to enhance the sensory experience of every attendee.',
      },
      {
        title: 'Engaging Visual Performances',
        description:
          'Our lightshows are meticulously programmed to synchronize with the music, creating mesmerizing visual effects.',
